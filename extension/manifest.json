{
  "manifest_version": 3,
  "name": "Focus Tint",
  "version": "1.0.0",
  "description": "Toggle a dim overlay to help focus on the current tab.",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Focus Tint",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
